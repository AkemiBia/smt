{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/counters",
      "dest": "/api/counters.js"
    },
    {
      "src": "/api/increment",
      "dest": "/api/increment.js"
    },
    {
      "src": "/avatars/(.*)",
      "dest": "/client/dist/avatars/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|ico|json|webp|gif))",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ]
}
